{

  "manifest_version": 2,
  "name": "DeFacebook",
  "version": "1.0",

  "description": "Helping control FB usage",

  "icons": {
    "48": "icons/img.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.js", "main.js", "number.js"]
    }
  ],
  "permissions": [
    "webRequest", "webRequestBlocking", "*://*.facebook.com/*", "*://*.fb.com/*", "*://*.fbcdn.net/*", "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}